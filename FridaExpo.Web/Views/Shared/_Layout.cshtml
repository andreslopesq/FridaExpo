    <link href="~/Content/fontawesome-all.css" rel="stylesheet" type="text/css" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  

    
</head>
<body>


    <script>
        $(document).ready(main);
        var contador = 1;
        function main() {
            $('.menu_bar').click(function () {
                // $('nav').toggle();

                if (contador == 1) {
                    $('nav').animate({
                        left: '0'
                    });
                    contador = 0;
                } else {
                    contador = 1;
                    $('nav').animate({
                        left: '-100%'
                    });
                }

            });

        };
    </script>

 

            <div class="container body-content" style="margin-top: 100px">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - FRIDA JEANS</p>
                </footer>
            </div>

            @RenderSection("scripts", required: false)
</body>
</html>
