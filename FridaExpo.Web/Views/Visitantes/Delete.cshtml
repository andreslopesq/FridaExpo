@model FridaExpo.Web.Models.visitante

@{
    ViewBag.Title = "Eliminar";
}

<header>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="menu_bar">
                <center><img src="~/img/LOGO FRIDA JEANS.png" height="70" width="180"></center>
                <span class="fa fa-bars" style="margin-top:-50px"></span>
            </div>
            <nav>
                <center>
                    <ul>
                        <li><a href="@Url.Action("Create", "Visitantes")"><span class="far fa-edit"></span>ALTA</a></li>
                        <li><a href="@Url.Action("Index", "Visitantes")"><span class="far fa-list-alt"></span>CONSULTA</a></li>
                        <li><a href="@Url.Action("Index", "Home")"><span class="fas fa-sign-out"></span>SALIR</a></li>
                    </ul>
                </center>
            </nav>

        </div>
    </div>
</header>

<div class="col-lg-12">
    <div class="box box-success">
        <div class="box-body">
         


                <div class="col-lg-12 col-md-12  no-padding col-lista text-center">
                    <div class="col-lg-1 col-md-1 padding-8">
                        <h3>Estas seguro que deseas eliminar este registro?</h3>
                        <dl class="">
                            <dd>
                                @Html.DisplayFor(model => model.nombreCliente)
                            </dd>
                        </dl>

                        <dl>
                            <dd>
                                @Html.DisplayFor(model => model.nombreNegocio)
                            </dd>
                        </dl>

                        <dl>
                            <dd>
                                @Html.DisplayFor(model => model.domicilio) @Html.DisplayFor(model => model.noExt) , @Html.DisplayFor(model => model.colonia) , @Html.DisplayFor(model => model.cp) , @Html.DisplayFor(model => model.localidad) , @Html.DisplayFor(model => model.estado)


                            </dd>
                        </dl>

                           
                        <dl>

                            <dd>
                                @Html.DisplayFor(model => model.email)
                            </dd>
                        </dl>

                        @using (Html.BeginForm())
                        {
                        @Html.AntiForgeryToken()



                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Eliminar" class="btn btn-default" onclick="return foo();" style="background-color:rgb(235, 75, 159)" />
                                </div>
                            </div>
                            <div class="form-actions no-color">                                
                                @Html.ActionLink("Cancelar ", "Index")
                            </div>
                        }
                    </div>
                </div>

            </div>
        
    </div>
</div>
